---
// Base layout for all pages
const { title = 'SocialAi - The Open Social Index' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="The Open Social Index & Identity Claim Network" />
    <slot name="head" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      :root {
        --gh-canvas-default: #0d1117;
        --gh-canvas-subtle: #161b22;
        --gh-border-default: #30363d;
        --gh-fg-default: #c9d1d9;
        --gh-fg-muted: #8b949e;
        --gh-accent-fg: #58a6ff;
        --gh-accent-emphasis: #1f6feb;
        --gh-success-fg: #3fb950;
        --gh-danger-fg: #f85149;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;
        line-height: 1.6;
        color: var(--gh-fg-default);
        background: var(--gh-canvas-default);
      }
      
      header {
        background: var(--gh-canvas-subtle);
        border-bottom: 1px solid var(--gh-border-default);
        padding: 1rem 2rem;
      }
      
      nav {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      
      nav h1 {
        font-size: 1.5rem;
        font-weight: 600;
      }
      
      nav h1 a {
        color: var(--gh-fg-default);
        text-decoration: none;
      }
      
      nav ul {
        list-style: none;
        display: flex;
        gap: 1.5rem;
      }
      
      nav a {
        color: var(--gh-fg-muted);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
      }
      
      nav a:hover {
        color: var(--gh-fg-default);
        background-color: rgba(177, 186, 196, 0.12);
      }
      
      main {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 2rem;
      }
      
      footer {
        background: var(--gh-canvas-subtle);
        border-top: 1px solid var(--gh-border-default);
        padding: 2rem;
        text-align: center;
        margin-top: 4rem;
        color: var(--gh-fg-muted);
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <h1><a href="/">üåê SocialAi</a></h1>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/profiles">Profiles</a></li>
          <li><a href="/timeline">Timeline</a></li>
          <li><a href="/claim">Claim Profile</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <p>&copy; {new Date().getFullYear()} SocialAi - The Open Social Index</p>
    </footer>
  </body>
</html>
