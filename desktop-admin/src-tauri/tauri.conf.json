{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "SocialAi Admin",
  "version": "0.1.0",
  "identifier": "com.socialai.admin",
  "build": {
    "beforeDevCommand": "echo 'Dev mode ready'",
    "beforeBuildCommand": "echo 'Building admin UI'",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "SocialAi Admin",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:3000 http://localhost:4200; frame-src http://localhost:4200"
    }
  }
}
